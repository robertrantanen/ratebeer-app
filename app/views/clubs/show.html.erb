<p style="color: green"><%= notice %></p>

<%= render @club %>

<strong>Members:</strong>

<ul>
  <% @club.users.each do |user| %>
    <li> <%= link_to user.username, user %> </li>
  <% end %>
</ul>

<div>
  <%= link_to "Edit this club", edit_club_path(@club) if current_user%> |
  <%= link_to "Back to clubs", clubs_path %>

  <%= button_to "Destroy this club", @club, method: :delete if current_user%>
</div>
