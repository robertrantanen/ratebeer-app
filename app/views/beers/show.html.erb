
<%= render @beer %>

<% if @beer.ratings.empty? %>
  <p>Beer has not yet been rated!</p>
<% else %>
  <p>Beer has <%=pluralize(@beer.ratings.count, 'rating')%> with average of <%= @beer.average_rating %></p>
<% end %>

<% if current_user %>
  <h4>give a rating:</h4>

  <%= form_with(model: @rating) do |form| %>
    <%= form.hidden_field :beer_id %>
    score: <%= form.number_field :score %>
    <%= form.submit "Create rating", class:"btn btn-primary" %>
  <% end %>
<% end %>

  <div>
  <%= edit_and_destroy_buttons(@beer) %>
  <br>
  <%= link_to "Back to beers", beers_path, class:"btn btn-primary" %>
  </div>
