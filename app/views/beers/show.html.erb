<p style="color: green"><%= notice %></p>

<%= render @beer %>

<% if @beer.ratings.empty? %>
  <p>Beer has not yet been rated!</p>
<% else %>
  <p>Beer has <%=pluralize(@beer.ratings.count, 'rating')%> with average of <%= @beer.average_rating %></p>
<% end %>

<div>
  <%= link_to "Edit this beer", edit_beer_path(@beer) if current_user %> |
  <%= link_to "Back to beers", beers_path %>

  <%= button_to "Destroy this beer", @beer, method: :delete, form: { data: { turbo_confirm: 'Are you sure?' } } if current_user %>
</div>
